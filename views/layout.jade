            .btn.btn-primary Menu
          .row
            .col-xs-6.col-sm-3
              img#logo(alt='logo', src='/img/Nova.png').logo--sm
            #menu.col-xs-12.col-sm-9.collapse.navbar-collapse(style='padding-top:10px; overflow-y: hidden; overflow-x: hidden;')
              ul.nav.navbar-nav
                li
                  a(href='/') About
                li
                  a(href='/actors?category=male' class=title=='Male Actors'?'active':'') Male Actors
                li
                  a(href='/actors?category=female' class=title=='Female Actors'?'active':'') Female Actors
                li
                  a(href='#') Contact
